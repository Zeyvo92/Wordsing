// tsconfig.json
{
    "compilerOptions": {
        "lib": [
            "esnext"
        ],
        "target": "es2020",
        "module": "commonjs",
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src"
    ]
}